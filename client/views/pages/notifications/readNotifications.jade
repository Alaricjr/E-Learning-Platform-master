template(name="readNotifications")
  h1.no-margin-top
    a(href="{{pathFor 'messages'}}") {{_'Messages'}} ({{unreadMessagesCount}})
    ||
    |Read Notifications ({{notifications.count}})
  p
    a.btn.btn-default(href="{{pathFor 'notifications'}}") Show unread notifications
  each notifications
    +notificationsListItem
  else
    p No read notifications.
  hr
  p
    a.btn.btn-default(href="{{pathFor 'notifications'}}") Show unread notifications